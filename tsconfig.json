{
  "compilerOptions": {
    /* Base Options */
    "target": "ES2022",
    "allowJs": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "moduleDetection": "force",
    
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    
    /* Strict Type-Checking Options */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    
    /* If transpiling with TypeScript: */
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "outDir": "./dist",
    "sourceMap": true,
    "rootDir": "./server",
    
    /* If the code doesn't run in the DOM: */
    "lib": ["es2022"],
    
    /* If building for a library in a monorepo: */
    "composite": true,
    "declarationMap": true,

    /* Import alias */
    "baseUrl": "./server",
    // "paths": {
    //   "@/utils/*": ["utils/*"],
    //   "@/config/*": ["config/*"],
    //   "@/models/*": ["models/*"],
    //   "@/routes/*": ["routes/*"],
    //   "@/constants/*": ["constants/*"],
    //   "@/controllers/*": ["controllers/*"],
    //   "@/middlewares/*": ["middlewares/*"],
    //   "@/services/*": ["services/*"],
    //   "@/types/*": ["types/*"],
    // }
  },
  "include": ["./*.js", "server/**/*.ts", "tests/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
